# StudyOverflow Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
# Get your MongoDB URI from MongoDB Atlas or your MongoDB provider
# Format: mongodb+srv://username:password@cluster.mongodb.net/?appName=StudyOverflow
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=StudyOverflow

# MongoDB Database Name (defaults to 'studyoverflow')
MONGODB_DB=studyoverflow

# Session Security Secret
# IMPORTANT: Generate a strong random string with:
#   openssl rand -hex 32
# Minimum 32 characters required
SESSION_SECRET=your-random-32-character-secret-here

# Server Configuration
# Port to run the server on (defaults to 5000)
PORT=5000

# Node Environment (development, production, test)
NODE_ENV=development

# Vercel Deployment (automatically set by Vercel, don't set locally)
# VERCEL=1
